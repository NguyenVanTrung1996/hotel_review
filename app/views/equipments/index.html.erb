<%= form_tag(equipments_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: t("search") %>
  <%= submit_tag t("search") %>
<% end %>
<%= provide :title, t("equipment.title") %>
<%= link_to t("equipment.add_equipment"), new_equipment_path, class: "btn btn-custom3" %>
<div class="content">
  <ul id="equipments" class="equipments">
    <%= render partial:"equipment", collection: @equipments %>
  </ul>
</div>
<div id="paginator1">
  <%= paginate @equipments, remote: true %>
</div>
