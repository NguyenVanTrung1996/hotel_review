<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="login-form">
  <% provide :title, t("signup") %>
  <h2><%= t "signup" %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :name, t("users.name") %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name",
        class: "form-control box" %>
    </div>

    <div class="field">
      <%= f.label :email, t("users.email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "box" %>
    </div>

    <div class="field">
      <%= f.label :password, t("users.password") %>
      <% if @minimum_password_length %>
      <em>(<%= t("users.min_pass", min: @minimum_password_length) %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "box" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t("users.pass_confirm")  %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "box" %>
    </div>

    <div class="actions text-center">
      <%= f.submit t("signup"), class: "btn btn-custom2" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
</div>
</div>
