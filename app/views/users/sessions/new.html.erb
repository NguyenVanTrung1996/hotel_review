<div class="row">
<div class="col-md-6 col-md-offset-3">
<div class="login-form">
  <% provide :title, t("login") %>
  <h2><%= t "login" %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, t("users.email")  %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "box" %>
    </div>

    <div class="field">
      <%= f.label :password, t("users.password")  %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "box" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, class:"input-reset" %>
        <%= f.label :remember_me, t("users.remember")  %>
      </div>
    <% end -%>

    <div class="actions text-center">
      <%= f.submit t("login"), class: "btn btn-custom2" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
</div>
</div>

