<%= form_tag(motels_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: t("search")%>
  <%= submit_tag t("search") %>
<% end %>
<%= provide :title, t("hotel.title") %>
<%= link_to t("hotel.add_hotel"), new_motel_path, class: "btn btn-custom3" %>
<div class="content row">
  <div id="motels" class="motels">
    <%= render @motels %>
  </div>
</div>
<div id="paginator1">
  <%= paginate @motels, remote: true %>
</div>
